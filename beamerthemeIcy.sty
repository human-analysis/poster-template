\selectcolormodel{rgb}
\mode<presentation>

\definecolor{i6colorscheme1}{rgb}{1,1,1}  %  e.g. for headline background
\definecolor{i6colorscheme2}{rgb}{0.7,0, 0}  %  e.g. title in headline
\definecolor{i6colorscheme3}{rgb}{1,1,1}  %  e.g. for poster background
\definecolor{i6colorscheme4}{rgb}{1,1,1}  %  e.g. for block background
\definecolor{i6colorscheme5}{rgb}{1,1,1}  %  e.g. title in headline, separation lines
\definecolor{i6colorscheme6}{rgb}{0.7,0,0}  %  e.g. for alert


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% headline colors and fonts
\setbeamercolor{headline}{fg=i6colorscheme2,bg=white}
\setbeamercolor{title in headline}{fg=i6colorscheme2}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}
\setbeamercolor{logo in headline}{fg=black,bg=i6colorscheme3}

% lines
\setbeamercolor{separation line}{bg=i6colorscheme5}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=i6colorscheme2}
% \setbeamerfont{footline}{fg=white,size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=i6colorscheme3}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=i6colorscheme5,bg=i6colorscheme2}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme2}
% \setbeamerfont{example title}{size=\large,series=\bf,bg=i6colorscheme1,fg=white}

% \setbeamercolor*{example body}{fg=white,bg=i6colorscheme4}
% \setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}

 % \setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}
 % \setbeamercolor{author in head/foot}{fg=tabutter, bg=black}
 % \setbeamercolor{title in head/foot}{bg=tabutter, fg=black}

\setbeamercolor{alerted text}{fg=i6colorscheme6}

%\setbeamercolor{example text}{fg=taorange}
%\setbeamercolor{structure}{fg=ta3skyblue}

\setbeamertemplate{itemize items}[circle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  % \begin{beamercolorbox}[ht=3ex,dp=1ex,center,rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex]{block title}%
  %   \usebeamerfont*{block title}\insertblocktitle
  % \end{beamercolorbox}%

  \begin{beamercolorbox}[ht=3ex,dp=1ex,center,rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex]{block title}%
    \vbox to0.75ex{\vfil\hbox{\usebeamerfont*{block title}\insertblocktitle}}
  \end{beamercolorbox}%

  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex,sep=2ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.2\paperwidth}
        \vskip10ex
        \centering
         \includegraphics[width=.2\linewidth,keepaspectratio]{logos/qr-code.pdf}
         \hskip3ex
         \includegraphics[width=.2\linewidth,keepaspectratio]{logos/msu-logo-green.pdf}
         \vskip1ex
      \end{column}
      \begin{column}{.6\paperwidth}
        \hskip2ex
        \vskip15ex
        \centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\Huge{\inserttitle}}\\[4ex]}
        \usebeamercolor{author in headline}{\color{fg}\huge{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\huge{\insertinstitute}\\[0ex]}
      \end{column}
      \begin{column}{.2\paperwidth}
      \vskip10ex
      \centering
      \includegraphics[scale=2]{logos/2019-cvpr-logo.png}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

